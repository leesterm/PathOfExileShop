<div id="index-fields">
	<h1>WELCOME</h1>
	<form id="login" action="/" method="POST">
		<input type="text" name="username" placeholder="username"></input></br>
		<input type="password" name="password" placeholder="password"></input></br></br>
		<input type="submit" value="Log In"></input>
	</form>
	<button id="register">Click Here to Register</button>
	<form id="register-form" action="/register/user" method="POST">
		<input type="text" name="user" placeholder="username" required></input>
		<input type="text" name="pw" placeholder="password" required></input>
		<input type="text" name="balance" placeholder="balance"></input>
		<input type="text" name="address" placeholder="address"></input>
		<input type="submit" value="Register"></input>
	</form>
	<h1 id="error">{{error}}</h1>
</div>